<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    android:background="@drawable/sponsored_border"
    android:clipToPadding="false"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">

    <TextureView
        android:id="@+id/video_texture"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/video_preview_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/video_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/video_texture"
        android:layout_alignLeft="@id/video_texture"
        android:layout_alignRight="@id/video_texture"
        android:layout_alignTop="@id/video_texture"
        android:visibility="gone"
        android:scaleType="center"
        android:scaleX="1.0"
        android:scaleY="1.0"
        android:src="@android:drawable/ic_media_play"/>

    <ImageView
        android:id="@+id/video_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/video_texture"
        android:layout_alignLeft="@id/video_texture"
        android:layout_alignRight="@id/video_texture"
        android:layout_alignTop="@id/video_texture"
        android:visibility="gone"
        android:scaleType="center"
        android:scaleX="1.0"
        android:scaleY="1.0"
        android:src="@drawable/restart"/>

    <TextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_texture"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Title"/>

    <TextView
        android:id="@+id/video_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_title"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        android:textStyle="italic"
        tools:text="Author"/>

    <ImageView
        android:id="@+id/video_sponsored_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/sponsored_indicator"
        tools:ignore="RtlHardcoded"/>
</RelativeLayout>